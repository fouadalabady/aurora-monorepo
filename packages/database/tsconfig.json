{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/test/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/generated"
  ]
}